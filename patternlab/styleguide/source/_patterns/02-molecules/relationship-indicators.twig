<div class="ma__relationship-indicators">
  <div class="ma__relationship-indicators--section primary">
    <span class="ma__relationship-indicators--label">
      Offered By:
    </span>
    <div class="ma__relationship-indicators--terms">
      {% for item in relationshipIndicators.primary %}
      <div class="ma__relationship-indicators--term">
        <a href="{{ item.href }}">{{ item.text }}</a>
      </div>
    {% endfor %}
    <button type="button" class="js-relationship-indicator-button">
      show <span class="tag-count"></span> <span class="tag-state">more</span
    </button>
    </div>
  </div>

  {% if relationshipIndicators.secondary is not empty %}
  <div class="ma__relationship-indicators--section secondary">
    <span class="ma__relationship-indicators--label">
      Related To:
    </span>
    <div class="ma__relationship-indicators--terms">
    {% for item in relationshipIndicators.secondary %}
      <div class="ma__relationship-indicators--term">
        <a href="{{ item.href }}">{{ item.text }}</a>
      </div>
    {% endfor %}
    <button type="button" class="js-relationship-indicator-button">
      show <span class="tag-count"></span> <span class="tag-state">more</span>
    </button>
    </div>
  </div>
  {% endif %}
</div>