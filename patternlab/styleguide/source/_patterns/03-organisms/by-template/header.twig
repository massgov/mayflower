<!-- Begin .header -->
<header class="ma__header" id="header">
  {% if not header.hideBackTo %}
  <div class="ma__header__backto">
    <a href="{{ header.backTo ? header.backTo.url : 'https://www.mass.gov' }}">{{ header.backTo ? header.backTo.text : 'Go to classic Mass.gov' }}</a>
  </div>
  {% endif %}

  <a class="ma__header__skip-nav" href="#main-content">skip to main content</a>

      
   
    
    <nav class="ma__header__nav" aria-label="main navigation" id="main-navigation" role="navigation">
    <div class="ma__header__utility-nav ma__header__utility-nav--wide">
        {% include "@organisms/by-template/utility-nav.twig" %}
      </div>

      <div class="ma__header__button-container js-sticky-header">
        <button role="button" aria-pressed="false" class="ma__header__menu-button js-header-menu-button" aria-label="Open the  main menu for mass.gov">
          <span class="ma__header__menu-icon"></span>
          <span class="ma__header__menu-text">Menu</span>
        </button>
      </div>

      <div class="ma__header__nav-container">
        
        {% if not hideHeaderSearch %}
        <div class="ma__header__nav-search nav-search-mobile">
          {% set headerSearch = headerSearch|merge({'id':'nav-search'}) %}
          {% include "@molecules/header-search.twig" %}
        </div>
        {% endif %}

        <div class="ma__header__main-nav">
          {% include "@molecules/main-nav.twig" %}
        </div>

        <div class="ma__header__utility-nav ma__header__utility-nav--narrow">
          {% include "@organisms/by-template/utility-nav.twig" %}
        </div>
      </div>
    </nav>
 

  <div class="ma__header__container">

    <div class="ma__header__logo">
      {% include "@atoms/09-media/site-logo.twig" %}
    </div>

    {% if not hideHeaderSearch %}
    <div class="ma__header__search js-header-search-menu">
      {% include "@molecules/header-search.twig" %}
    </div>
    {% endif %}
  </div>


</header>
<!-- end .header -->
