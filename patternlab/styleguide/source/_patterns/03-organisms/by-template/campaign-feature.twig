<section class="ma__campaign-feature">
    {% set headingLevel = campaignFeature.positionTop ? 1 : campaignFeature.compHeading.level %}
    <h{{ headingLevel }} class="ma__campaign-feature__title">{{ campaignFeature.compHeading.title }}</h{{ headingLevel }}>

    <div class="ma__campaign-feature__primary">
      {% set card = campaignFeature.campaignFullWidthFeature %}
      {% include "@molecules/card.twig" with card %}
    </div>

    {% set campaignFeature2up = campaignFeature.campaignFeature2up %}
    {% include "@molecules/campaign-feature-2up.twig" %}
	
	{% if campaignFeature.moreLink %}
    {% set decorativeLink = campaignFeature.moreLink %}
      <div class="ma__campaign-feature__more-link">
        {% include "@atoms/decorative-link.twig" %}
      </div>
    {% endif %}
</section>
