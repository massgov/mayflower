{% set textColor = campaignFullWidthHeader.textColor %}
{% set bgColor = campaignFullWidthHeader.backgroundColor %}
{% set bgImage = campaignFullWidthHeader.bgImage %}

<section id="{{campaignFullWidthHeader.id}}"  class="ma__campaign-header {{ textColor ? 'ma__campaign-header--light-text' : '' }}{% if bgColor %} ma__campaign-header--{{ bgColor }}{% endif %}{% if bgImage %} ma__campaign-header--image{% endif %}">

  {% if campaignFullWidthHeader.bgImage %}
    <style>
      #{{ campaignFullWidthHeader.id }}.ma__campaign-header--image {
        background-image: url('{{ campaignFullWidthHeader.bgImage }}');
      }

      {% if campaignFullWidthHeader.mobileBgImage %}
      @media (-webkit-min-device-pixel-ratio: 2) {
        #{{ campaignFullWidthHeader.id }}.ma__campaign-header--image {
          background-image: url('{{ campaignFullWidthHeader.mobileBgImage }}');
        }
      }
      {% endif %}
    </style>
  {% endif %}

  <div class="ma__campaign-header--wrapper">
    {% set headingLevel = campaignFullWidthHeader.positionTop ? 1 : 2 %}
    <h{{ headingLevel }} class="ma__campaign-header--title">{{ campaignFullWidthHeader.title }}</h{{ headingLevel }}>

    {% if campaignFullWidthHeader.subtitle %}
    <span class="ma__campaign-header--sub-title">{{ campaignFullWidthHeader.subtitle }}</span>
    {% endif %}

    {% if campaignFullWidthHeader.description %}
    <div class="ma__campaign-header--description">{{ campaignFullWidthHeader.description }}</div>
    {% endif %}

    {% if campaignFullWidthHeader.button.text %}
    <div class="ma__campaign-header--cta">
      {% set button = campaignFullWidthHeader.button %}
      {% include "@atoms/01-buttons/button.twig" %}
    </div>
    {% endif %}
  </div>

</section>
