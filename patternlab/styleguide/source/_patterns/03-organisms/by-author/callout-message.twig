{% set calloutMessageTheme = calloutMessage.theme ? "ma__callout-message--" ~ calloutMessage.theme : "ma__callout-message--white" %}

<section class="ma__callout-message__container">
  <div class="ma__callout-message {{ calloutMessageTheme }}">
  {% set richText = calloutMessage.message %}
  {% include "@organisms/by-author/rich-text.twig" %}
  {% if calloutMessage.link %}
    {% set calloutLink = calloutMessage.link %}
    {% include "@molecules/callout-link.twig" %}
  {% endif %}
  </div>
</section>
