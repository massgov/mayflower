<nav class="ma__page-flipper" aria-label="pagenation">
  {% if pageFlipper.context %}
  <div class="ma__page-flipper__context">
    <span class="ma__page-flipper__context-label" aria-hidden="true">{{pageFlipper.context.label}}</span>
    {% set decorativeLink = pageFlipper.context.link %}
    {% include "@atoms/decorative-link.twig" %}
  </div>
  {% endif %}
  <ul class="ma__page-flipper__container">
  {% if pageFlipper.prev %}
    {% set arrowNav = pageFlipper.prev %}
    {% include "@molecules/arrow-nav.twig" %}
  {% else %}
    <li class="ma__page-flipper__blank">&nbsp;<span class="ma__visually-hidden">No page to navigate</span></li>
  {% endif %}
  {% if pageFlipper.next %}
    {% set arrowNav = pageFlipper.next %}
    {% include "@molecules/arrow-nav.twig" %}
  {% else %}
<li class="ma__page-flipper__blank">&nbsp;<span class="ma__visually-hidden">No page to navigate</span></li>
  {% endif %}
  </div>
</nav>
