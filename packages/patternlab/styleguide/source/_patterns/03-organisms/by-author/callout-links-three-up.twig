    {% set heading3 = {"text": calloutLinksThreeUp.headingText } %}
    {% set heading4 = {"text": calloutLinksThreeUp.headingText } %}
    {% set heading5 = {"text": calloutLinksThreeUp.headingText } %}
    {% set heading6 = {"text": calloutLinksThreeUp.headingText } %}
    {% include "@atoms/04-headings/heading-" ~ headingLevel ~ ".twig" %}
  {% endif %}
{% endset %}

{% set headingDescription %}
  {% if calloutLinksThreeUp.headingDescription is not empty %}
    {% set paragraph = {"text": calloutLinksThreeUp.headingDescription } %}
    {% include "@atoms/11-text/paragraph.twig" %}
  {% endif %}
{% endset %}

{% set heading %}
