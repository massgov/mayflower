    <div class="ma__callout-links-three-up__heading">
      {{ headingText }}
      {{ headingDescription }}
    </div>
  {% endif %}
{% endset %}

<div class="ma__callout-links-three-up">

  {{ heading }}

  <div class="ma__callout-links-three-up__container">
    {% for calloutLink in calloutLinksThreeUp.calloutLinks %}
      {% include "@molecules/callout-link.twig" %}
    {% endfor %}
