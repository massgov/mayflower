{% if inlineLinks.links %}
    <div class="ma__inline-links {{ (inlineLinks.background)?"ma__inline-links--bg-"~inlineLinks.background:"" }}">
        <ul class="ma__inline-links__container" {% if inlineLinks.ariaLabel %} aria-label="{{ inlineLinks.ariaLabel }} {% endif %}">
            {% for link in inlineLinks.links %}
                <li class="ma__inline-links__item">
                    {% if link.href %}
                        <a href="{{ link.href }}" title="{{ link.info }}" data-label="{{ link.lang_label }}">{{ link.text }}</a>
                    {% else %}
                        <span title="{{ link.info }}" data-label="{{ link.lang_label }}"> {{ link.text }} </span>
                    {% endif %}
                </li>
            {% endfor %}
            <li class="ma__inline-links__item lang-toggle-container">
                <a href="#" class="lang-toggle">Translate labels</a>
            </li>
        </ul>
    </div>
{% endif %}
