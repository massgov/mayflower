<section class="ma__mapped-locations">
  {% if mappedLocations.compHeading %}
    <div class="ma__mapped-locations__header">
      {% if mappedLocations.compHeading %}
        {% set compHeading = mappedLocations.compHeading %}
        {% include "@atoms/04-headings/comp-heading.twig" %}
      {% endif %}
    </div>
  {% endif %}
  {% if mappedLocations.paragraph or mappedLocations.button %}
    <div class="ma__mapped-locations__aside">
      {% if mappedLocations.paragraph %}
        <div class="ma__mapped-locations__info">
          {% set paragraph = mappedLocations.paragraph %}
          {% include "@atoms/11-text/paragraph.twig" %}
        </div>
      {% endif %}
      {% if mappedLocations.button %}
        <div class="ma__mapped-locations__button">
          {% set button = mappedLocations.button %}
          {% include "@atoms/01-buttons/button.twig" %}
        </div>
      {% endif %}
    </div>
  {% endif %}
  {% if mappedLocations.leafletMap %}
    <div class="ma__mapped-locations__map">
      {% set id = 'dataviz-' ~ random(9999) %}
      <div id="sr-info" class="ma__visually-hidden">
        Note for screen reader users, we suggest skip the following interactive map and go to the location listing for a better user experience.
        Currently, the map is not accessible yet for a comprehensive experience.
      </div>
      <a class="ma__mapped-locations__map__skip-link js-skiplink" href="#map_{{ id }}">Skip the interactive map.</a>
      {% set leafletMap = mappedLocations.leafletMap %}
      {% include "@molecules/map-leaflet.twig" %}
      <div class="ma__mapped-locations__map__skip-link_target js-skiplink-target">
        <a id="map_{{ id }}" tabindex="-1">You skipped the map.</a>
      </div>
    </div>
  {% endif %}
</section>
