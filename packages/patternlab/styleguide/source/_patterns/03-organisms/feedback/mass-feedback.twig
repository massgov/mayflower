<div data-nosnippet="true" class="ma__mass-feedback-form">
  <h2 class="ma__mass-feedback-form__heading">{{ heading }}</h2>
  {# form screen #}
  <form class="ma__mass-feedback-form__form{{ submitted ? ' hidden': ''}}" method="post" novalidate action="{{ formAction }}" id="{{ formId }}">
    <fieldset class="ma_feedback-fieldset feedback-load" role="radiogroup"{% if title.required %} aria-required="true"{% endif %}>
      <legend>
        {{ title.value }}
      </legend>

      {% set inputGroup = inputGroup %}
      {% set inputGroup = inputGroup|merge({"required": title.required}) %}
      {% include "@atoms/03-forms/input-group.twig" %}
    </fieldset>

    <div class="ma__mass-feedback-form__fields">
      <fieldset class="ma_feedback-fieldset">
        <legend class="feedback-response feedback-positive">
          {{ queryAffirmative.value }}{{ queryAffirmative.required ? ' <span aria-hidden="true">*</span>' : '' }}
        </legend>

        <legend class="feedback-response feedback-negative">
          {{ queryNegative.value }}{{ queryNegative.required ? ' <span aria-hidden="true">*</span>' : '' }}
        </legend>

        {% if helpTip %}
        <div class="ma__help-tip-container">
          {% set helpTip = helpTip %}
          {% include "@organisms/by-author/help-tip.twig" %}
        </div>
        {% endif %}

        {% if alert %}
          <div class="feedback-alert">
            <div class="feedback-alert-icon">{{icon('input-warning')}}</div>
            <div class="feedback-alert-message">
              {{ alert.text }}
              {% set decorativeLink = alert.link %}
              {% include "@atoms/decorative-link.twig" %}
            </div>
          </div>
        {% endif %}
        <div class="feedback-response feedback-positive">
          {% set textarea = affirmativeTextarea %}
          {% include "@atoms/03-forms/textarea.twig" %}
          {% if alertMsg %}
            <div class="ma__alert-msg">{{ alertMsg }}</div>
          {% endif %}
          {% if warnMsg %}
            <div class="ma__warn-msg{{showWarnMsg ? ' has-error' : ''}}">{{ warnMsg|raw }}</div>
          {% endif %}
        </div>
        <div class="feedback-response feedback-negative">
          {% set textarea = negativeTextarea %}
          {% include "@atoms/03-forms/textarea.twig" %}
          {% if alertMsg %}
            <div class="ma__alert-msg">{{ alertMsg }}</div>
          {% endif %}
          {% if warnMsg %}
            <div class="ma__warn-msg{{showWarnMsg ? ' has-error' : ''}}">{{ warnMsg|raw }}</div>
          {% endif %}
        </div>
      </fieldset>
    </div>

    <fieldset class="ma_feedback-fieldset submitButtonWrapper">
      <input id="" class="submitButton ma__button ma__button--small" type="submit" value="Send Feedback" />
    </fieldset>

    {% for element in hiddenElements %}
      <input type="hidden" id="{{ element.id }}" name="{{ element.name }}" value="{{ element.value }}" class="{{ element.class }}" />
    {% endfor %}
  </form>
  {# success screen #}
  <div class="ma__mass-feedback-form__form{{ submitted ? '' : ' hidden'}}" id="success-screen">
    {% if success.before %}
      <p>{{success.before|raw}}</p>
    {% endif %}
    {% if showWarnMsg %}
      <p>{{warnMsg|raw}}</p>
    {% endif %}
    {% if success.after %}
      <p>{{success.after|raw}}</p>
    {% endif %}
  </div>
</div>
