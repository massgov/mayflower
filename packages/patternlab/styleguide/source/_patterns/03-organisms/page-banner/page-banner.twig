{% set theme = pageBanner.theme ? " ma__page-banner--" ~ pageBanner.theme : " ma__page-banner--c-primary" %}

<div class="ma__page-banner{{theme}}">
  <div class="ma__page-banner__container">
    <div class="ma__page-banner__content">
      {% set pageHeader = pageBanner.pageHeader %}
      {% include "@organisms/page-header/page-header.twig" %}
      {% include "@organisms/page-header/page-header-addons.twig" %}
    </div>
    <div class="ma__page-banner__image"></div>
  </div>
</div>

{% if pageBanner.image %}
    {% set imageMobile = pageBanner.imageMobile ?: pageBanner.image %}
    {% set imageMedium = pageBanner.imageMedium ?: pageBanner.image %}
    <style>
        {% if pageBanner.showMobileImage %}
            .ma__page-banner__image {
                background-image: url('{{ imageMobile }}');
                display: block;
            }
        {% endif %}
        @media (min-width: 1000px) {
            .ma__page-banner__image {
                background-image: url('{{ imageMedium }}');
            }
        }
        @media (min-width: 1200px) {
            .ma__page-banner__image {
                background-image: url('{{ pageBanner.image }}');
            }
        }
        {% if pageBanner.bgPositionX and pageBanner.bgPositionY %}
            .ma__page-banner__image {
                background-position: {{ pageBanner.bgPositionX }} {{ pageBanner.bgPositionY }};
            }
        {% endif %}
    </style>
{% endif %}