<div class="ma__page-banner">
  <div class="ma__page-banner__container">
    <div class="ma__page-banner__content">
      {% set pageHeader = pageBanner.pageHeader %}
      {% include "@organisms/page-header/page-header.twig" %}
      {% include "@organisms/page-header/page-header-addons.twig" %}
    </div>
    <div class="ma__page-banner__image"></div>
  </div>
</div>

{% if pageBanner.bgImage %}
    <style>
        .ma__page-banner__image {
            background-image: url('{{ pageBanner.bgImage }}');
        }
        {% if pageBanner.retinaBgImage %}
            @media (-webkit-min-device-pixel-ratio: 2) {
                .ma__page-banner__image {
                    background-image: url('{{ pageBanner.retinaBgImage }}');
                }
            }
        {% endif %}
        {% if pageBanner.bgPositionX and pageBanner.bgPositionY %}
            .ma__page-banner__image {
                background-position: {{ pageBanner.bgPositionX }} {{ pageBanner.bgPositionY }};
            }
        {% endif %}
    </style>
{% endif %}