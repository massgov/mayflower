<div class="ma__utility-panel{% if item.class %} {{ item.class }}{% endif %}">
  <div class="ma__utility-panel__description {{ item.links ? '' : 'ma__utility-panel__description--full' }}">
    {% set richText = item.description.richText %}
    {% include "@organisms/by-author/rich-text.twig" %}
  </div>

  <ul class="ma__utility-panel__items">
    {% for decorativeLink in item.links %}
    <li class="ma__utility-panel__item js-clickable">
      {% include "@atoms/decorative-link.twig" %}
    </li>
    {% endfor %}
  </ul>
</div>
