<section class="ma__breadcrumbs {{breadcrumbs.light ? 'ma__breadcrumbs--light' : ''}}">
  <nav aria-label="Breadcrumbs" class="ma__breadcrumbs__container">
    <ol class="ma__breadcrumbs__items">
      {% if breadcrumbs.links|length <= 2 %}
        <li class="ma__breadcrumbs__item ma__breadcrumbs__chevron-back" aria-hidden="true"></li>
      {% endif %}
      {% for link in breadcrumbs.links %}
        {% if link.url %}
          <li class="ma__breadcrumbs__item" id="ma__breadcrumbs__item--{{ loop.index }}">
            {% if loop.first %}
              <a href="{{link.url}}" aria-label="Home">{{ icon("home") }}</a>
            {% else %}
              <a href="{{link.url}}">{{link.text}}</a>
            {% endif %}
          </li>
        {% endif %}
      {% endfor %}
      <li class="ma__breadcrumbs__item ma__breadcrumbs__item__expand-indicators">
        <button type="button" class="js-breadcrumbs-button" aria-label="Show all Breadcrumbs" title="Show all Breadcrumbs" aria-pressed="false">â€¦</button>
      </li>
    </ol>
  </nav>
</section>
