<div class="ma__breadcrumbs {{breadcrumbs.light ? ' ma__breadcrumbs--light' : ''}}">
  <nav aria-label="Breadcrumbs" class="ma__breadcrumbs__container">
    <ol class="ma__breadcrumbs__items">
      {% if breadcrumbs.links|length <= 1 %}
        <li class="ma__breadcrumbs__item ma__breadcrumbs__chevron-back" aria-hidden="true"></li>
      {% endif %}
      {% for link in breadcrumbs.links %}
        {% if link.url %}
          <li class="ma__breadcrumbs__item {{ loop.index == loop.length ? ' ma__breadcrumbs__item--last':'' }}" id="ma__breadcrumbs__item--{{ loop.index }}">
            {% if loop.first %}
              <a href="{{link.url}}" aria-label="Home" class="ma__breadcrumbs__item__icon-link">{{ icon("home") }}</a>
            {% else %}
              <a href="{{link.url}}">{{link.text}}</a>
            {% endif %}
          </li>
        {% endif %}
      {% endfor %}
      {% if breadcrumbs.currentPage %}
         <li class="ma__breadcrumbs__item--current ma__visually-hidden" aria-current="location">{{ breadcrumbs.currentPage }}</li>
      {% endif %}
      <li class="ma__breadcrumbs__item ma__breadcrumbs__item__expand-indicators" hidden="">
        <button type="button" class="js-breadcrumbs-button" aria-label="Show all Breadcrumbs" title="Show all Breadcrumbs">â€¦</button>
      </li>
    </ol>
  </nav>
</div>
