{% if stickyTOC %}
<section class="ma__sticky-toc" data-min-to-show="{{ stickyTOC.min }}" data-parent="{{ stickyTOC.parent }}"
  data-sections="{{ stickyTOC.sections }}">
  {# Skip link #}
  <div class="ma__jump-links__skip-link__container">
    <a href="#ma-end-sticky-toc" class="ma__jump-links__skip-link">Skip table of contents</a>
  </div>
  {# Static display on desktop #}
  <div class="ma__sticky-toc__inner">
    <div class="ma__sticky-toc__container">
      <h2 class="ma__sticky-toc__title" id="page-contents">{{ stickyTOC.title }}</h2>
      <nav class="ma__sticky-toc__links" aria-labelledby="page-contents">
        {# Mobile toggle button #}
        <button class="ma__sticky-toc__toggle-link" aria-haspopup="true" aria-expanded="false"><span class="ma__visually-hidden js-sticky-toc__state">Show</span><span class="ma__visually-hidden"> table of contents</span><span aria-hidden="true">+</span></button>
        {# Desktop layover #}
        <div class="ma__sticky-toc__column">
          <div class="ma__sticky-toc__secondary-label">{{ stickyTOC.title }} <button class="secondary-label-close" aria-expanded="true"><span class="ma__visually-hidden">Hide Table of contents</span><span aria-hidden="true">x</span></button></div>

          {% for link in stickyTOC.links %}
          <div class="ma__sticky-toc__link" data-link="#{{ link.href }}">
            <a href="#{{ link.href }}" {{ link.info ? 'title="{{ link.info }}"' : '' }}>{{ link.text }}</a>
          </div>
          {% endfor %}

        </div>
      </nav>
      <div class="ma__sticky-toc__footer">
        <button type="button" class="js-sticky-toc__toggle-items"  aria-haspopup="true" aria-expanded="false" aria-conrole="sticky-toc">Show More<span class="ma__visually-hidden">Table of contents</span></span>
        </button>
      </div>
    </div>
  </div>
  {# Sticky TOC buttons #}
  <div class="ma__sticky-toc__stuck" id="sticky-toc">
    <div class="ma__sticky-toc__stuck--inner-wrapper">
      <div class="ma__sticky-toc__current-section"></div>
      <div class="ma__sticky-toc__tools">
        <div class="ma__sticky-toc__sticky-top tool">
          <button class="stickyTOC-top">
            {{ icon('arrow') }}
            <span aria-label="Go to top of the page">top</span>
          </button>
        </div>
        <div class="ma__sticky-toc__sticky-toggle">
          <button class="stickyTOC-open" aria-haspopup="true" aria-expanded="false"><span class="ma__visually-hidden">Show</span>{{ stickyTOC.title }}</button>
        </div>
      </div>
    </div>
  </div>
  <div class="ma__skip-link__toc-target">
    <a id="ma-end-sticky-toc" tabindex="-1"><span>You skipped the table of contents section.</span></a>
  </div>
  <div class="ma__sticky-toc__overlay" ></div>
</section>
{% endif %}
