<div class="ma__search-collection-row">
	<form role="search" class="ma__search-collection-row__form" action="{{ searchCollection.form.ActionUrl }}" method="get">
		<h3>{{ searchCollection.form.headingText }}</h3>


    {# KEYWORD SEARCH COMPONENT: BEGIN #}
		<div class="ma__keyword-search js-keyword-search">
			<label for="campaign-hr-keywords" class="ma__visually-hidden">{{ searchCollection.form.visuallyHiddenText }}</label>
			<input class="ma__keyword-search__input" name="title" id="q" type="text" placeholder="{{ searchCollection.form.headingText }}">
			<button type="submit" class="ma__button-search--secondary">
				<span class="ma__button-search__label">{{ searchCollection.form.submit }}</span>
				<svg aria-hidden="true" viewbox="0 0 20 20">
					<path d="M1424.99 107.4L1419.66 102.105C1420.44 100.884 1420.89 99.4383 1420.89 97.8892C1420.89 93.54 1417.3300000000002 90 1412.95 90C1408.57 90 1405.01 93.54 1405.01 97.89C1405.01 102.241 1408.57 105.781 1412.95 105.781C1414.43 105.781 1415.82 105.375 1417.01 104.67L1422.3799999999999 110ZM1407.97 97.89C1407.97 95.1625 1410.2 92.9416 1412.95 92.9416C1415.7 92.9416 1417.93 95.1617 1417.93 97.89C1417.93 100.619 1415.7 102.839 1412.95 102.839C1410.2 102.839 1407.97 100.619 1407.97 97.89Z " transform="matrix(1,0,0,1,-1405,-90)"></path>
				</svg>
			</button>
		</div>
    {# KEYWORD SEARCH COMPONENT: END #}

	</form>

	<div class="ma__search-collection-row__secondary">
		<h3>{{ searchCollection.secondary.heading }}</h3>
		<ul>
      <li>
        {% set decorativeLink = searchCollection.secondary.firstLink %}
        {% include "@atoms/decorative-link.twig" %}
      </li>

      <li>
        {% set decorativeLink = searchCollection.secondary.secondLink %}
        {% include "@atoms/decorative-link.twig" %}
      </li>
		</ul>
	</div>
</div>
