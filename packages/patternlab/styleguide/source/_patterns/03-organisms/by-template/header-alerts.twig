{% if headerAlerts %}
<section data-nosnippet="true" class="ma__header-alerts js-accordion js-header-alerts is-open">
  <div class="ma__header-alerts__header js-accordion-link">
    {% if headerTitle.icon %}
      <div class="ma__header-alerts__header___icon">
        {{ icon(headerTitle.icon) }}
      </div>
    {% endif %}
    <div class="ma__header-alerts__header__title">
      <span>{{ headerTitle.text }}</span>
    </div>
    <div class="ma__header-alerts__header__toggle">
      <span class="ma__header-alerts__header__hide">{{headerTitle.hideText}}</span>
      <span class="ma__header-alerts__header__show">{{headerTitle.showText}}</span> 
      <span class="ma__header-alerts__header__text">{{headerTitle.text}}</span>
    </div>
  </div>
  <div class="ma__header-alerts__content js-accordion-content">
    <div class="ma__header-alerts__container">
      {% for headerAlert in headerAlerts %}
        {% include "@organisms/by-template/header-alert.twig" %}
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}