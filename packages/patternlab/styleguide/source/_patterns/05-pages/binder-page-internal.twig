{% extends '@templates/01-content-types/binder-page.twig' %}

{% block header %}
	{% include "@organisms/by-template/header-hamburger.twig" %}
{% endblock %}

{% block preContent %}
	{% if breadcrumbs %}
		{% include "@organisms/by-template/breadcrumbs.twig" %}
	{% endif %}
	{% include "@molecules/relationship-indicators.twig" %}
	{% for navSection in binderNavigationSections %}
		{% set tableOfContentsOverlay = navSection.tableOfContents %}
		{% include "@organisms/by-template/table-of-contents-overlay.twig" %}
	{% endfor %}
	{% if illustratedHeader %}
		{% include "@organisms/illustrated-header/illustrated-header.twig" %}
	{% endif %}
	{% if pageHeader %}
		{% include "@organisms/page-header/page-header.twig" %}
		{% include "@organisms/page-header/page-header-addons.twig" %}
	{% endif %}
{% endblock %}

{% block pageContent %}{% endblock %}

{% block sidebar %}{% endblock %}

{% block postContent %}
	{% for navSection in binderNavigationSections %}
		{% set pageFlipper = navSection.pageFlipper %}
		{% include "@organisms/by-author/page-flipper.twig" %}
	{% endfor %}
{% endblock %}


{% block footer %}
	{% include "@organisms/by-template/footer.twig" %}
{% endblock %}
