{% extends '@templates/single-column.twig' %}

{% block preContent %}
  <style>
    .ma__relationship-indicators {
      border-bottom: 0;
    }
  </style>

  {% include "@molecules/relationship-indicators.twig" %}
  {% include "@organisms/by-template/page-banner.twig" %}
{% endblock %}

{% block pageContent %}
  {% include "@organisms/by-author/sections-three-up.twig" %}
  {% include "@organisms/by-author/related-orgs-and-topics.twig" %}

  {% embed "@organisms/by-author/stacked-row-section.twig" with  {
    "stackedRowSection": {
      "title":"Title for the Row of Content",
      "stackedRowModifier": "ma__stacked-row__section--restricted"
    }
  } %}
    {% block stackedRowContentOverride %}
      {% set tableOfContentsHierarchy = expandableContent.mainList %}
      {% include "@organisms/by-template/table-of-contents-hierarchy.twig" %}

      {% set tableOfContentsHierarchy = expandableContent.forWorkers %}
      {% include "@organisms/by-template/table-of-contents-hierarchy.twig" %}

      {% set tableOfContentsHierarchy = expandableContent.forEmployers %}
      {% include "@organisms/by-template/table-of-contents-hierarchy.twig" %}

      {% set tableOfContentsHierarchy = expandableContent.training %}
      {% include "@organisms/by-template/table-of-contents-hierarchy.twig" %}
    {% endblock %}
  {% endembed %}
{% endblock %}

{% block postContent %}{% endblock %}
