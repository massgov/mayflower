{% set hasSuggestions = headerSearch.hasSuggestions %}
{% set suggestedScopes = headerSearch.suggestedScopes %}
<div class="ma__header-search">
  <form role="search" action="#" class="ma__form js-header-search-form">
    <label
        for="{{headerSearch.id}}"
        class="ma__header-search__label">{{headerSearch.label}}</label>
    <input
        id="{{headerSearch.id}}"
        class="ma__header-search__input"
        placeholder="{{headerSearch.placeholder}}"
        type="search"
        inputmode="search"
        autocomplete="off"
        {% if hasSuggestions %}
          role="combobox"
          aria-expanded="false"
          aria-controls="search-suggestions"
        {% endif %}
    />
    {% if hasSuggestions %}
      <div id="search-suggestions" class="ma__header-search-suggestions">
        <span role="status" aria-live="polite" class="ma__header-search-suggestions-helper" aria-hidden="false">
          2 results are available; to navigate, use up and down arrow keys on desktop or swipe left and right on touch devices.
        </span>
        <ul role="listbox" tabindex="-1" class="ma__header-search-suggestions-list">
          {% for option in suggestedScopes %}
            <li class="ma__header-search-suggestions-option">
              {{ icon('search') }}
              <span role="option">
                <span class="ma__header-search-suggestions-option-input">INPUT </span>
                <span class="ma__header-search-suggestions-option-scope">in {{ option }}</span>
              </span>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
    {% set buttonSearch = headerSearch.buttonSearch %}
    {% include "@atoms/01-buttons/button-search.twig" %}
  </form>
</div>
