<nav class="ma__secondary-nav-hamburger">
  <ul class="ma__secondary-nav-hamburger__items js-secondary-nav">
    {% for item in navItems %}
      {% set buttonId =  'button' ~ loop.index %}
      {% set menuId =  'menu' ~ loop.index %}
      <li class="ma__secondary-nav-hamburger__item {{ item.active ? 'is-active' : '' }} {{ item.subNav ? 'has-subnav js-secondary-nav-top-item' : 'js-secondary-nav-top-link' }}">
        {% if item.href %}
          <a href="{{ item.href }}" class="ma__secondary-nav-hamburger__link">{{ item.text }}</a>
        {% else %}
          <span id="{{ buttonId }}" class="ma__secondary-nav-hamburger__link">{{ item.text }}</span>
        {% endif %}

        {% if item.subNav %}
          <button type="button" id="{{ buttonId }}" class="ma__secondary-nav-hamburger__top-link-trigger js-secondary-nav-trigger" aria-haspopup="true" aria-expanded="false" aria-hidden="true">
            <span class="ma__visually-hidden">Show the sub topics of {{item.text}}</span>
            {% include "@atoms/05-icons/svg-plus.twig" with {
              additionalClasses: 'ma__secondary-nav-hamburger__top-link-icon'
            } %}
          </button>
          <div class="ma__secondary-nav-hamburger__subitems-container js-secondary-nav-content">
            <ul id="{{ menuId }}" aria-labelledby="{{ buttonId }}" class="ma__secondary-nav-hamburger__subitems">
              {% for subitem in item.subNav %}
                <li class="ma__secondary-nav-hamburger__subitem">
                  <a href="{{ subitem.href }}" class="ma__secondary-nav-hamburger__link">{{ subitem.text }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</nav>
