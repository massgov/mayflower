{% set thumbnail = card.thumbnail %}
{% set eyebrow = card.eyebrow %}
{% set cardClass = card.usage ? " ma__card--" ~ card.usage : "" %}
{% set cardThemeClass = card.theme ? "ma__card--" ~ card.theme : "" %}
{% set contentClass = card.usage ? " ma__card__content--" ~ card.usage : "" %}
{% set imgClass = card.usage ? card.usage : card.id %}
{% set detailsClass = card.usage ? " ma__card__details--" ~ card.usage : "" %}

<a class="ma__card__wrapper" href="{{ card.link }}" aria-labelledby="{{ card.id }}-title">
  <div {% if not card.usage %}id="{{ card.id }}" {% endif %}class="ma__card{{ cardClass }} {{ cardThemeClass }}">
    {% if not card.usage %}
      <style>
        .ma__card__img--{{ card.id }} {
          background-image: url('{{ thumbnail }}');
        }
      </style>
    {% endif %}
      <div class="ma__card__img ma__card__img--{{ imgClass }}">
        <img src="{{ card.thumbnail }}" alt="">
      </div>
      <div class="ma__card__content{{ contentClass }}">
        {% if eyebrow %}
          <div class="ma__card__eyebrow">{{ card.eyebrow }}</div>
        {% endif %}
        {% set headingLevel = card.level ? card.level : 3 %}
        <h{{ headingLevel }} class="ma__card__title" id="{{ card.id }}-title"><span>{{card.title}}&nbsp;{{ icon('arrow') }}</span></h{{ headingLevel }}>
        <div class="ma__card__details{{ detailsClass }}">
          {% if card.usage %}
          <div class="ma__card__thumbnail">
            <img src="{{card.thumbnail}}" alt="">
          </div>
          {% endif %}
          <div class="ma__card__text">
            {{card.text}}
          </div>
        </div>
      </div>  
  </div>
</a>