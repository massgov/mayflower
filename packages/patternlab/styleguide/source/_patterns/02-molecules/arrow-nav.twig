{% set arrowButton = arrowNav.arrowButton %}

<li class="ma__arrow-nav {{ arrowButton.direction ? 'ma__arrow-nav--' ~ arrowButton.direction : '' }}">
	{% include "@atoms/01-buttons/arrow-button.twig" %}
	<div class="ma__arrow-nav__title" data-label="{{ arrowNav.label }}" aria-hidden="true">
		<span>{{ arrowNav.title }}</span>
	</div>
	<div class="ma__arrow-nav__link">
		{% set link = arrowNav.link %}
		{% include "@atoms/11-text/link.twig" %}
	</div>
</li>
