{% set thumbnail = card.thumbnail %}
{% set cardClass = " ma__card--vertical-card" %}
{% set contentClass = " ma__card__content--vertical-card" %}
{% set imgClass = card.id %}
{% set detailsClass = " ma__card__details--vertical-card"  %}

<a href="{{ card.link }}" class="ma__card--vertical-card-link">
  <div id="{{ card.id }}" class="ma__card{{ cardClass }}">
    {% if not card.usage %}
      <style>
        .ma__card__img--{{ card.id }} {
          background-image: url('{{ thumbnail }}');
        }
      </style>
    {% endif %}
    <div class="ma__card__wrapper">
        <div class="ma__card__img ma__card__img--{{ imgClass }}">
          <img src="{{ card.thumbnail }}" alt="">
        </div>
      <div class="ma__card__content{{ contentClass }}">
        <div class="ma__general-teaser__eyebrow ma__card__eyebrow--vertical-card">{{ card.eyebrow }}</div>
          
            {% set headingLevel = card.level ? card.level : 3 %}
            <h{{ headingLevel }} class="ma__card__title"><span>{{card.title}}&nbsp;{{ icon('arrow') }}</span></h{{ headingLevel }}>
          
        <div class="ma__card__details{{ detailsClass }}">
          {% if card.usage %}
          <div class="ma__card__thumbnail">
            <img src="{{card.thumbnail}}" alt="">
          </div>
          {% endif %}
          <div class="ma__card__text">
            {{card.text}}
          </div>
        </div>
      </div>
    </div>
  </div>
</a>