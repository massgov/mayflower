{% set alertPrefix = emergencyHeader.prefix ?: 'Emergency Alerts' %}
<div class="ma__emergency-header ma__emergency-header--pt">
  <span class="ma__emergency-header__label">
    {{ icon('alert') }}
    <span>{{ alertPrefix }}</span>
  </span>
  <a class="ma__emergency-header__toggle js-accordion-link" href="#">
    <span class="ma__emergency-header__toggle__hide">{{emergencyHeader.hideText}}</span>
    <span class="ma__emergency-header__toggle__show">{{emergencyHeader.showText}}</span> 
    <span class="ma__emergency-header__title">{{ emergencyHeader.title }}</span>
  </a>
</div>
