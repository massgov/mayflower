{% set alertPrefix = emergencyHeader.prefix ?: 'Alerts' %}
<div class="ma__emergency-header ma__emergency-header--pt">
  <span class="ma__emergency-header__label">
    {{ icon('alert') }}
    <span>{{ alertPrefix }}</span>
  </span>
  <button class="ma__emergency-header__toggle js-accordion-link">
    {# aria-expanded gives users the state of the accordion. #}
    <span class="ma__emergency-header__toggle__hide" aria-hidden="true">{{emergencyHeader.hideText}}</span>
    <span class="ma__emergency-header__toggle__show" aria-hidden="true">{{emergencyHeader.showText}}</span>
    <span class="ma__emergency-header__title">{{ emergencyHeader.title }}</span>
  </button>
</div>
