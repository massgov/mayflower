{% set mainContentClass = introSidebar ? 'main-content--two' : 'main-content--full' %}

{% block header %}

{% endblock %}
<main
  id="main-content"
  {% if flexibleLinkGroup %}
    class="ma__services ma__services-flexible-link-groups"
  {% else %}
    class="ma__services"
  {% endif %}
  tabindex="-1"
  {% if schemaPageType %} typeof="{{schemaPageType}}"{% endif %}>
  <div class="pre-content">
    {% block preContent %}
      {% include "@molecules/relationship-indicators.twig" %}
      {% include "@organisms/by-template/page-banner.twig" %}
    {% endblock %}
  </div>
  <div class="stacked-row-content">
    <section class="ma__stacked-row__section">
      <div class="main-content {{ mainContentClass }}">
        <div class="page-content page-content--intro">
          {% if introSidebar.logo %}
            {% set image = introSidebar.logo %}
            {% include "@atoms/09-media/image.twig" %}
          {% endif %}
          {% block pageContentIntro %}

            {% set richText = introPageContent.intro %}
            {% include "@organisms/by-author/rich-text.twig" %}

            {% if introPageContent.video %}
              {% set video = introPageContent.video %}
              {% include "@atoms/09-media/video.twig" %}
            {% endif %}

            {% if flexibleLinkGroup is not defined or flexibleLinkGroup is null or flexibleLinkGroup is sameas(false) %}
                {% if introPageContent.keyActions %}
                  {% set keyActions = introPageContent.keyActions %}
                  {% include "@organisms/by-author/key-actions.twig" %}
                {% endif %}
            {% endif %}

          {% endblock %}
        </div>

        {% if introSidebar %}
          <aside class="sidebar sidebar--intro">
            {% block sidebarIntro %}
              {% if introSidebar.logo.src %}
                {% set image = introSidebar.logo %}
                {% include "@atoms/09-media/image.twig" %}
              {% endif %}
              {% if flexibleLinkGroup %}
                {% if introSidebar.login %}
                  {% set iconLinks = introSidebar.login.iconLinks %}
                  {% include "@molecules/icon-links.twig" %}
                {% endif %}
              {% endif %}
              {% if introSidebar.social %}
                {% set iconLinks = introSidebar.social.iconLinks %}
                {% include "@molecules/icon-links.twig" %}
              {% endif %}
              {% if introSidebar.imageLinkList %}
                {% set imageLinkList = introSidebar.imageLinkList %}
                {% include "@organisms/by-author/image-link-list.twig" %}
              {% endif %}
            {% endblock %}
          </aside>
        {% endif %}
      </div>
    </section>

      <section class="ma__stacked-row__section">
        <div class="main-content main-content--full">
          <div class="page-content">
            {% block pageContent %}
              {% if doActionFinder %}
                {% set actionFinder = doActionFinder.actionFinder %}
                {% include "@organisms/by-author/action-finder.twig" %}
              {% endif %}
              {% if flexibleLinkGroup is not defined or flexibleLinkGroup is null or flexibleLinkGroup is sameas(false) %}
                {% if learnActionFinder %}
                  {% set actionFinder = learnActionFinder.actionFinder %}
                  {% include "@organisms/by-author/action-finder.twig" %}
                {% endif %}
              {% endif %}
              {% if contactList %}
                {% include "@organisms/by-author/contact-list.twig" %}
              {% endif %}
              {% if mappedLocations %}
                {% include "@organisms/by-author/mapped-locations.twig" %}
              {% endif %}
              {% if flexibleLinkGroup is not defined or flexibleLinkGroup is null or flexibleLinkGroup is sameas(false) %}
                {% if eventListing %}
                  {% include "@organisms/by-author/event-listing.twig" %}
                {% endif %}
              {% endif %}
              {% if flexibleLinkGroup is not defined or flexibleLinkGroup is null or flexibleLinkGroup is sameas(false) %}
                {% if splitColumns %}
                  <div class="more-info-header">
                    <h2 class="ma__comp-heading">More Information</h2>
                  </div>
                  {% include "@organisms/by-author/split-columns.twig" %}
                {% endif %}
              {% endif %}
              {% if flexibleLinkGroup %}
                {% if splitColumns %}
                  <div class="more-info-header">
                    <h2 class="ma__comp-heading">Related Services</h2>
                  </div>
                  {% include "@organisms/by-author/split-columns.twig" %}
                {% endif %}
              {% endif %}
            {% endblock %}
          </div>
        </div>
      </section>

  </div>
  {% block schemaContent %}

  {% endblock %}
</main>

{% block footer %}

{% endblock %}
