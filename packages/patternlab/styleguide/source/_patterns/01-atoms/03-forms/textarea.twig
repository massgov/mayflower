{% set requiredErrorID = textarea.id ~ "-error-required" %}
{% set controlID = requiredErrorID ~ " " ~ textarea.errorIds %}
{% if textarea.labelText %}
  <label for="input-type-textarea"
  class="ma__label {{ textarea.required ? 'ma__label--required' : 'ma__label--optional'}} {{ textarea.hiddenLabel ? 'ma__label--hidden' : '' }}">{{ textarea.labelText }}{{ textarea.required ? '<span aria-hidden="true">*</span>': ''}}</label>
{% endif %}
<textarea
  class="{{ textarea.required ? 'js-is-required' : ''}}"
  name="{{ textarea.name }}"
  id="{{ textarea.id }}"
  data-type="{{ textarea.type }}"
  aria-controls="{{controlID}}"
  {% if textarea.maxlength %}
    maxlength="{{ textarea.maxlength }}"
  {% endif %}
  {% if textarea.describedBy %}
    aria-describedBy="{{ textarea.describedBy }}"
  {% endif %}
  {{ textarea.required ? 'required' : '' }} /></textarea>
{% if textarea.errorMsg %}
  <div class="ma__error-msg" role="region" aria-live="polite" id={{requiredErrorID}}>{{ textarea.errorMsg }}</div>
{% endif %}
